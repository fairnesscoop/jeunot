{% extends 'layout.html.twig' %}

{% set title = 'profile.edit.password.title'|trans %}

{% block title %}
    {{ 'profile.edit.password.title'|trans }} - {{ parent() }}
{% endblock %}

{% block main %}
    {% include 'common/breadcrumb.html.twig' with {
        items: [
            {
                title: 'nav.dashboard'|trans,
                path: path('app_dashboard'),
            },
            {
                title: 'nav.profile'|trans,
                path: path('app_profile_detail', { uuid: app.user.uuid }),
            },
            {
                title: 'profile.edit.title'|trans,
                path: path('app_profile_edit', { uuid: app.user.uuid }),
            },
            {
                title,
            },
        ]
    } only %}

    {% include 'common/jumbotron_simple.html.twig' with { title } only %}

    {{ form_start(form, { attr: { class: 'j-container j-box', style: '--box-padding: calc(2 * var(--w))' } }) }}
        {{ form_row(form.oldPassword, { row_attr: { class: 'j-input-group' } }) }}
        {{ form_row(form.newPassword.first, { row_attr: { class: 'j-input-group' } }) }}
        {{ form_row(form.newPassword.second, { row_attr: { class: 'j-input-group' } }) }}
        {{ form_row(form.save, { attr: { class: 'j-btn' } }) }}
    {{ form_end(form) }}
{% endblock main %}
